{
  "expo": {
    "name": "portalpet-beta",
    "slug": "portalpet-beta",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMotionUsageDescription": "Needs Permission for Steps"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./img/casita.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.anonymous.portalpetbetav2"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Dejas que $(PRODUCT_NAME) acceda a tu ubicación?."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Dejas que $(PRODUCT_NAME) tenga acceso a tus fotos?.",
          "savePhotosPermission": "Dejas que $(PRODUCT_NAME) guarde esta foto?.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Dejas que $(PRODUCT_NAME) tenga acceso a tu cámara?."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Dejas que $(PRODUCT_NAME) tenga acceso a tus fotos?."
        }
      ]
    ]
  }
}
